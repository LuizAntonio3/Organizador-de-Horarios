#:import get_color_from_hex kivy.utils.get_color_from_hex

<Celula>:
    on_touch_up: print(self.ids['materia'].text)
    canvas:
        Color:
            rgba: get_color_from_hex('#d0d0d0')
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: get_color_from_hex('#000000')
        Line:
            rectangle: self.x, self.y, self.width, self.height
    FloatLayout:
        size: root.size
        pos: root.pos
        # materia
        Label:
            id: materia
            pos_hint: {'center_x': .5, 'center_y': .75}
            color: get_color_from_hex('#000000')
        GridLayout:
            size: self.size
            pos: self.pos
            cols: 3
            Label:
                id: dificuldade
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: get_color_from_hex('#000000')
            Label:
                id: carga_horaria_semanal
                pos_hint: {'center_x': .5, 'center_y': .5}
                color: get_color_from_hex('#000000')
        Label:
            id: tempo_estudo
            pos_hint: {'center_x': .5, 'center_y': .25}
            color: get_color_from_hex('#000000')
