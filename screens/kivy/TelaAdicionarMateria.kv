#:import get_color_from_hex kivy.utils.get_color_from_hex

<TelaAdicionarMateria>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: get_color_from_hex('#515151')
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            size_hint: .2, .1
            pos_hint: {"x": 0, "center_y": 1-self.size_hint[1]/2}
            text: '<'
            on_release: root.manager.current = 'principal'

        GridLayout:
            cols: 1
            spacing: 1
            size_hint: .85, .7
            pos_hint: {"center_x": .5, "center_y": .5}
            Label:
                text: "Materia"
                size_hint_x: .3
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: get_color_from_hex('#d0d0d0')
            TextInput:
                id: materia
                size_hint_y: None
                height: 35
                focus: True
                multiline: False
                write_tab: False
                font_size_hint: 0.45
                cursor_color: get_color_from_hex('#000000')
            Label:
                text: "Dificuldade"
                size_hint_x: .3
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: get_color_from_hex('#FFFFFF')
            Slider:
                id: dificuldade
                min: 1
                max: 10
            Label:
                text: str(int(root.ids.dificuldade.value))
            Label:
                text: "Carga Horaria Semanal"
                size_hint_x: .3
                text_size: self.size
                halign: 'left'
                valign: 'middle'
                color: get_color_from_hex('#FFFFFF')
            TextInput:
                id: carga_horaria_semanal
                size_hint_y: None
                height: 35
                multiline: False
                write_tab: False
                font_size_hint: 0.45
                cursor_color: get_color_from_hex('#000000')
            Label:
                id: invalidar
                color: get_color_from_hex('#FF0000')
            Button:
                size_hint: .5, 1.
                text: "Cadastrar"
                on_release: root.manager.get_screen('adicionar_materia').add_materia()
            Button:
                size_hint: .5, 1.
                text: "Mostrar"
                on_release: print(app.MyDb.get_subjects())
