#:import get_color_from_hex kivy.utils.get_color_from_hex
#:import ScrollEffect kivy.effects.scroll.ScrollEffect

<TelaPrincipal>:
    FloatLayout:
        GridLayout:
            cols: 2
            pos_hint: {"center_x": .5, "center_y": .9}
            size_hint: .85, .1
            padding: 2
            canvas.before:
                Color:
                    rgba: get_color_from_hex('#FFFFFF')
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                text: 'Adicionar Materia'
                on_release: root.manager.current = 'adicionar_materia'

            Button:
                text: 'Adicionar Horario Livre'
                on_release: root.manager.current = 'adicionar_horario_livre'

        GridLayout:
            cols: 1
            pos_hint: {"center_x": .5, "center_y": .45}
            size_hint: .85, .8
            padding: 2
            canvas:
                Color:
                    rgba: get_color_from_hex('#515151')
                Rectangle:
                    size: self.size
                    pos: self.pos

            ScrollView:
                effect_cls: ScrollEffect
                GridLayout:
                    id: container
                    on_parent: self.bind(minimum_height=self.setter('height'))
                    cols: 1
                    size_hint_y: None
                    canvas:
                        Color:
                            rgba: get_color_from_hex('#515151')
                        Rectangle:
                            size: self.size
                            pos: self.pos
            Button:
                size_hint: .5, 1.
                text: "Gerar"
                on_release: root.manager.get_screen('adicionar_materia').generate_study_time(app.MyDb)
